{
  "name": "confucius",
  "version": "1.0.0",
  "description": "Confucius - Hierarchical Memory System for AI Agents with Cross-Session Learning",
  "private": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
