  "author": "Confucius AI Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/confucius.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/confucius/issues"
  },
  "homepage": "https://github.com/your-org/confucius#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
